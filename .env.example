# Google Maps API Key (get from https://console.cloud.google.com/)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# NYC Open Data App Token (optional but recommended - get from https://data.cityofnewyork.us/)
NYC_OPEN_DATA_APP_TOKEN=your_nyc_open_data_app_token_here

# Database Configuration
DATABASE_PATH=data/nyc_property_data.db
DATABASE_URL=sqlite:///data/nyc_property_data.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log

# NYC Geographic Boundaries
NYC_LAT_MIN=40.4774
NYC_LAT_MAX=40.9176  
NYC_LNG_MIN=-74.2591
NYC_LNG_MAX=-73.7004

# API Rate Limiting
API_DELAY_SECONDS=0.1
MAX_RETRIES=3

# Model Configuration
MODEL_SAVE_PATH=models/saved_models/
RANDOM_STATE=42

# Real Data Sources Configuration
# NYC Open Data endpoints
NYC_CRIME_API_URL=https://data.cityofnewyork.us/resource/5uac-w243.json
NYC_PROPERTY_API_URL=https://data.cityofnewyork.us/resource/8y4t-faws.json
NYC_SALES_API_URL=https://data.cityofnewyork.us/resource/w2pb-icbu.json

# MTA Data
MTA_SUBWAY_STATIONS_URL=http://web.mta.info/developers/data/nyct/subway/Stations.csv

# Optional: Premium APIs (for future expansion)
ZILLOW_API_KEY=your_zillow_key_if_available
REDFIN_API_KEY=your_redfin_key_if_available
WALKSCORE_API_KEY=your_walkscore_key_if_available
ATTOM_DATA_API_KEY=your_attom_data_key_if_available
